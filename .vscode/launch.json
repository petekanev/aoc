{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/${input:solutionNumber}/solution.js",
            "args": [
                "${input:solutionNumber}"
            ]
        }
    ],
    "inputs": [{
        "id": "solutionNumber",
        "default": "1",
        "type": "promptString",
        "description": "Select the task number you want to debug"
    }]
}